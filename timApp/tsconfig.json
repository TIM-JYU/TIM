{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "strict": true,
    "allowUnreachableCode": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist/tsc",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "tim/*": [
        "static/scripts/tim/*"
      ],
      "vendor/*": [
        "static/scripts/vendor/*"
      ]
    },
    "target": "es2015",
    "lib": [
      "dom",
      "es2019",
      "scripthost",
      "dom.iterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "declaration": false,
    "noEmit": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "reveal",
      "jqueryui"
     ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true
  },
  "files": [
    "static/scripts/tim/main.ts",
    "static/scripts/tim/polyfills.ts"
  ],
  "include": [
    "static/scripts/tim/**/*.d.ts",
    "modules/cs/**/*.d.ts"
  ]
}
