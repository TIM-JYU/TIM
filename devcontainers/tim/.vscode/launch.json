  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}/timApp",
      "preLaunchTask": "npm: bdw - timApp"
    },
    {
      "name": "Python: Run TIM server",
      "type": "python",
      "request": "launch",
      "program": "/service/timApp/launch.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYCHARM_HOSTED": "1"
      },
      "cwd": "/service/timApp"
    }
  ],
  "compounds": [
    {
      "name": "TIM Server + Chrome",
      "configurations": ["Launch Chrome", "Python: Run TIM server"],
      "stopAll": true
    }
  ]
}
